{
  "compilerOptions": {
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowJs": true,
    "target": "ESNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
